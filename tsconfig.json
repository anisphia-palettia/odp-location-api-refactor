{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/generated/*": [
        "src/generated/*"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "src",
    "generated"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
